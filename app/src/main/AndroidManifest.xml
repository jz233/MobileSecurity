<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="zjj.app.mobilesecurity">

    <uses-permission android:name="android.permission.GET_PACKAGE_SIZE" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.WRITE_CALL_LOG" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".applications.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.HomeActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AppManagerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.CallSmsFilterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.BlackListActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.TaskManagerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.AppLockActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.AppLockSetPatternActivity" />
        <activity android:name=".activities.AppLockConfirmPatternActivity" />
        <activity
            android:name=".activities.AppLockConfirmPattern2Activity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.AppLockSettingsActivity"
            android:label="Settings"
            android:theme="@style/custom_pref_theme" />
        <activity
            android:name=".activities.TaskManagerSettingsActivity"
            android:label="Settings"
            android:theme="@style/custom_pref_theme" />
        <activity
            android:name=".activities.WhiteListActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <receiver android:name=".receivers.BootCompleteReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".receivers.SmsFilterReceiver"
            android:enabled="true"
            android:exported="true" />

        <service
            android:name=".services.AppLockService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".services.CallSmsFilterService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".services.CleanTaskService"
            android:enabled="true"
            android:exported="true"></service>
    </application>

</manifest>