<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:background="@drawable/ring_white" />

    <ImageView
        android:id="@+id/iv_security_ring"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:background="@drawable/ring_colored" />

    <ImageView
        android:id="@+id/iv_security_circle"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:src="@drawable/shadowed_circle" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:elevation="3px"
        android:src="@drawable/security_shadow" />

    <ImageView
        android:id="@+id/iv_security_shield"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:elevation="3px"
        android:src="@drawable/security_good" />

</FrameLayout>